<!-- head -->
<%- include ('./partials/head') %>
    <link rel="stylesheet" href="/css/producto.css">
    <link rel="stylesheet" href="/css/inicio.css">
    <link rel="stylesheet" href="/css/administrar.css">

    <body>
        <!-- HEADER -->
        <%- include ('./partials/header') %>

            <hr>
            <main>
                <!-- ARTICULOS_UNO -->
                <section>
                    <div class="articulos">
                    <% Products.forEach(cualquierNombre=> { %>

                        <article>
                            <a href="/product/<%= cualquierNombre.id %>/detail" target="_blank">
                                <img class="imagenes_copadas" src="img/producto/<%= cualquierNombre.image%>"
                                    alt="Frutas">
                            </a>
                            <figcaption>
                                <h2>
                                    <%= cualquierNombre.name%>
                                </h2> <br>
                                <h2>$<%= cualquierNombre.price%>
                                </h2> <br> <button class="carrito"><i
                                    class="fa-solid fa-cart-shopping"></i> Agregar al Carrito <i></i></button>
                            </figcaption>
                        </article>
                        <% }) %>
                    </div>
                </section>



            </main>

        </div>
        <%- include ('./partials/footer') %>
        </body>
    </html>

