<!-- head -->
<%- include ('./partials/head') %>

<body>
    <!-- HEADER -->
    <%- include ('./partials/header') %>
    <hr>
    <main>
        <!-- BANNER -->
        <div class="banner">
        </div>
        <!-- SUB_TITULO -->
        <div class="sub_titulo">
            <a href="#">
                <h2>Los destacados del mes</h2>
            </a>
        </div>
        <br>
        <!-- ARTICULOS_UNO -->
        <section>

            <div class="articulos">
                <% destacadosMes.forEach(cualquierNombre => { %>

                <article>
                    <a href="/product/<%= cualquierNombre.id %>/detail" target="_blank">
                        <img class="imagenes_copadas" src="img/producto/<%= cualquierNombre.imagen%>" alt="Frutas">
                    </a>
                    <figcaption>
                        <h2><%= cualquierNombre.nombreProducto%></h2> <br>
                        <h2>$<%= cualquierNombre.precio%></h2> <br> <button> <i class="fas fa-chevron-right"></i><i
                                class="fas fa-chevron-right"></i> Agregar al Carrito <i
                                class="fa-solid fa-cart-shopping"></i></button>
                    </figcaption>
                </article>
                <% }) %>
        </section>
